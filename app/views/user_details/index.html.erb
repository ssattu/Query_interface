<h1 class="d-flex justify-content-center align-content-center">User Details</h1>
<table class="d-flex justify-content-around border-1 m-5">
	<tr class="border-dark">
		<th class="border-2 p-2 text-center"><b>Id</th>
		<th class="border-2 p-2 text-center"><b>First_name</th>
		<th class="border-2 p-2 text-center"><b>Last_name</th>
		<th class="border-2 p-2 text-center"><b>Phone_no</th>
		<th class="border-2 p-2 text-center"><b>Profile_bio</th>
		<th class="border-2 p-2 text-center" colspan="3">Operations</th>

		<% @user.each do |user|%>
	<tr>
		<td class="border-1 p-2"><%= user.id %></td>
		<td class="border-1 p-2"><%= user.first_name %></td>
		<td class="border-1 p-2"><%= user.last_name %></td>
		<td class="border-1 p-2"><%= user.phone_no %></td>
		<td class="border-1 p-2"><%= user.profile_bio %></td>
		<td><%= button_to 'Edit',  edit_user_detail_path(user), method: :get %></td>
		<td><%= button_to 'Show',  user_detail_path(user), method: :get%></td>
		<td><%= button_to 'Remove',  user_detail_path(user), method: :delete, data:{confirm: 'Are you Sure?'}%></td>


	</tr>
	<%end%>
</table>

<br>
<br>
<div class=" d-flex justify-content-around">
<button class="p-2 btn-primary btn  rounded-2 p-2"><a class="text-decoration-none text-light" href="user_details/new"> Create User</a></button>
</div>
	


